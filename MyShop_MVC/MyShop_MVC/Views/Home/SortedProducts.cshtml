@model IEnumerable<ViewProduct>

<div class="content">
@{
    foreach (var product in Model)
    {
        <div class="product">
            @if (product.Discount > 0){<p class="disount">@product.Discount%</p>}
            <div class="showCategory">
                <img src="@product.Image"/>
            </div>
            <p class="nameProduct">@product.Name</p>
                @{
                    if (product.Discount > 0)
                    {
                        <p class="priceProduct"><s class="text-dark">@product.Price ₴</s> @(product.Price - product.Price * product.Discount / 100) ₴</p>
                    }
                    else
                    {
                        <p class="priceProduct">@product.Price ₴</p>
                    }
                }
            <a asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="details">Подробнее</a>
        </div>
    }
}
</div>