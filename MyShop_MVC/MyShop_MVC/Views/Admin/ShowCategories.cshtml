@{
}
@model IEnumerable<ViewCategory>

<a class="btn" asp-controller="Admin" asp-action="Index">Back</a>
<div class="content">
    @{
        foreach (var category in Model)
        {
            <div class="product">
                <p class="nameCategory text-center">@category.Name</p>
                <form method="post">
                    <input type="submit" value="Изменить" class="edit" asp-controller="Admin" asp-action="EditCategory" asp-route-categoryId="@category.Id" />
                    <button type="submit" asp-controller="Admin" asp-action="DeleteCategory" asp-route-categoryId="@category.Id" class="btnDelete">Удалить</button>
                </form>
            </div>
        }
    }
</div>