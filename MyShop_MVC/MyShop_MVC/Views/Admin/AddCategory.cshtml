@{
}
@model MyShop_MVC.DZ.Category

<style>
    .field-validation-error {
        color: #b94a48;
    }
  
    input.input-validation-error {
        border: 1px solid #b94a48;
    }
    input.valid {
        border: 1px solid #16a085;
    }
 
    .validation-summary-errors {
        color: #b94a48;
    }
</style>
<a class="btn" asp-controller="Admin" asp-action="Index">Back</a>
<h2 class="text-white text-center">Добавление категории</h2>
<form asp-action="AddCategory" asp-controller="Admin">
        <div class="form-group">
            <label asp-for="Name">Название категории</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Телевизоры">
            <span asp-validation-for="Name"/>
            </div>
        <p class="d-flex justify-content-center">
        <input type="submit" class="btn" value="Добавить" />
    </p>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>